<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottomNaviView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/navigation_bottom"
        android:layout_alignParentBottom="true"
        app:itemBackground="@color/bg_item_navigation"
        app:itemIconTint="@color/icon_navigation"
        app:itemTextColor="@color/text_navigation"
        app:menu="@menu/navigation"/>

    <com.abspath.openweibo.widget.MyViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottomNaviView"/>

</RelativeLayout>
